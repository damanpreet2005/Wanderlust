<% if(success && success.length) { %>
<div class="alert flashbar alert-success alert-dismissible fade show alert-overlay slide-down" role="alert">
    <strong><%= success %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(error && error.length) { %>
<div class="alert flashbar alert-danger alert-dismissible fade show alert-overlay slide-down" role="alert">
    <strong><%= error %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>